<Window x:Class="CampusProjectWithWPF.DormitoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampusProjectWithWPF"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Effective Communication with Dormitory Settlement" Height="1080" Width="1920">
    <Window.Resources>

    </Window.Resources>
    <Grid x:Name="MainGrid" Background="#FF50B4C8">
        <Border MinWidth="400" MaxWidth="1300" Margin="100"  Background="#FF92D041" VerticalAlignment="Top" Padding="40,0,40,0" CornerRadius="30" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>

            <TextBox  BorderThickness="0"   FontSize="100" FontFamily="Arial Rounded MT Bold"  x:Name="MainTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top"  Foreground="White" Background="#00808080" Padding="40,0,60,0" Grid.IsSharedSizeScope="True" AutomationProperties.IsColumnHeader="True"/>

        </Border>


    </Grid>
</Window>
